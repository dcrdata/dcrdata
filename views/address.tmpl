{{define "address"}}
<!DOCTYPE html>
<html lang="en">
{{template "html-head" printf "Decred Address %s" .Address}}
<body>

    {{template "navbar"}}

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h4>Address</h4>
                <p class="mono">{{.Address}}</p>
                <p>
                    {{if eq .NumTransactions .AddressRow}}
                        Currently only the {{.AddressRow}} most recent transactions are shown below.
                    {{else}}
                        Transactions: {{.NumTransactions}}</br>
                        Unconfirmed: {{.TotalUnconfirmed}}</br>
                        Received: {{.Received}}</br>
                        Sent: {{.TotalSent}}</br>
                        Unspent: {{.UnSpent}}</br>
                    {{end}}
                </p>
                <h5>Transactions</h5>
                <table class="table table-mono-cells table-sm striped">
                    <thead>
                        <th>Transactions ID</th>
                        <th class="text-right">Received DCR</th>
                        <th>Sent DCR</th>
                        <th>Total DCR</th>
                        <th>Time</th>
                        <th>Age</th>
                        <th>Confirmations</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{range .Transactions}}
                        <tr>
                            <td><a href="../tx/{{.TxID}}" class="hash">{{.TxID}}</a></td>
                            {{if ne .RecievedTotal 0.0}}
                                <td class="text-right">{{template "decimalParts" (float64AsDecimalParts .RecievedTotal false)}}</td>
                            {{else}}
                                <td></td>
                            {{end}}
                            {{if ne .SentTotal 0.0}}
                                <td>{{template "decimalParts" (float64AsDecimalParts .SentTotal false)}}</td>
                            {{else}}
                                <td></td>
                            {{end}}
                            <td class="text-right">{{template "decimalParts" (float64AsDecimalParts .Total false)}}</td>
                            <td>
                                {{if eq .Time 0}}
                                    Unconfirmed
                                {{else}}
                                    {{.FormattedTime}}
                                {{end}}
                            </td>
                            <td>
                            {{if eq .Time 0}}
                                N/A
                            {{else}}
                                <span data-age="{{.Time}}"></span>
                            {{end}}
                            </td>
                            <td>{{.Confirmations}}</td>
                            <td>{{.FormattedSize}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{template "footer"}}

</body>
</html>
{{end}}
