{{define "address"}}
<!DOCTYPE html>
<html lang="en">
{{template "html-head" printf "Decred Address %s" .Address}}
<body>

    {{template "navbar"}}

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h4>Address</h4>
                <p>{{.Address}}</p>

                <h4>Transactions</h4>
                <table class="table table-sm striped">
                    <thead>
                        <th>Transactions ID</th>
                        <th>Total DCR</th>
                        <th>Time</th>
                        <th>Age</th>
                        <th>Confirmations</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{range .Transactions}}
                        <tr>
                            <td><a href="../tx/{{.TxID}}" class="hash collapse">{{.TxID}}</a></td>
                            <td>{{.Value | float64Commaf}}</td>
                            <td>{{.Time | getTime }}</td>
                            <td class="age">{{if eq .Time 0}}
                                N/A
                            {{else}}
                                {{.Time}}
                            {{end}}
                            </td>
                            <td class="hidden">{{.Time}}</td>
                            <td>{{.Confirmations | int64Comma}}</td>
                            <td>{{.Size | formatBytes}} B</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{template "footer"}}

</body>
</html>
{{end}}
