{{define "tx"}}
<!DOCTYPE html>
<html lang="en">
{{template "html-head"}}
<body>
{{template "navbar"}}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4>Transaction</h4>
            <p>{{.TxID}}</p>
            <table class="table">
                <thead>
                    <th>Transactions ID</th>
                    <th>Total Value</th>
                    <th>Time</th>
                    <th>Confirmations</th>
                    <th>Included in block</th>
                    <th>Size</th>
                </thead>
                <tbody>
                    {{with .TxShort}}
                    <tr>
                        <td><span class="hash collapse">{{.TxID}}</span></td>

                        <td>{{ .Vout | getTotalFromTx | getAmount}}</td>
                        <td>{{$.Block.Time | getTime }}</td>
                        <td>{{$.Confirmations}}</td>
                        <td><a href="/explorer/block/{{$.Block.BlockHash}}">{{$.Block.BlockHeight}}</a></td>
                        <td>{{.Size}} B</td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7">
            <h4>In</h4>
            <table class="table table-sm">
                <thead>
                    <th>Transaction</th>
                    <th>Block Height </th>
                    <th>Sequence</th>
                    <th>Tree</th>
                    <th>Value</th>
                </thead>
                <tbody>
                    {{range .Vin}}
                    <tr>
                        <td>
                            {{ if .Coinbase}}<span>{{ .Coinbase }}</span>{{end}}
                            <span class="hash collapse">{{.Txid}}</span>
                        </td>
                        <td>{{if ne .BlockHeight 0}}{{.BlockHeight}}{{end}}</td>
                        <td>{{.Sequence}}</td>
                        <td>{{.Tree}}</td>
                        <td>{{.AmountIn | getAmount}}</td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <h4>Out</h4>
            <table class="table table-sm">
                <thead>
                    <th>Value</th>
                    <th>Address</th>
                </thead>
                <tbody>
                    {{range .Vout}}
                    {{ if ne .Value 0.0}}
                    <tr>
                        <td>
                            {{.Value | getAmount}}
                        </td>
                        <td>
                            {{range .ScriptPubKeyDecoded.Addresses}}
                                <div class="hash"><a href="/explorer/address/{{.}}">{{.}}</a></div>
                            {{end}}
                        </td>
                    </tr>
                    {{end}}
                    {{end}}
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
{{end}}