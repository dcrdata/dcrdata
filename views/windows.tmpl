{{define "windows"}}
<!DOCTYPE html>
<html lang="en">

{{template "html-head" "Decred Blocks Windows"}}
<body class="{{ theme }}">
    {{template "navbar" . }}
    <div class="container main" data-controller="main">
        <h4><span>Windows</span></h4>
        {{ $windowsCount := (int64 (len .Data)) }}
        {{ $topWindow := (int64 (index .Data 0).Window) }}
        <div class="row fs13">
            {{if gt $windowsCount 0}}
            <div class="col d-flex justify-content-between">
                {{if gt (index .Data (subtract $windowsCount 1)).Window 1}}
                <a
                    id="prev"
                    class="no-underline"
                    href="/windows?offset={{ add .OffsetWindow .Limit }}&rows={{.Limit}}"
                    data-keynav-priority
                >◄ Older</a>
                {{end}}
                {{if le $topWindow .BestWindow}}
                 <a
                    id="next"
                    class="no-underline"
                    href="/windows?offset={{ subtract .OffsetWindow .Limit }}&rows={{.Limit}}"
                    data-preserve-keynav-index="true"
                >Newer ►</a>
                {{end}}
            </div>
            {{end}}
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table striped table-responsive">
                    <thead>
                        <tr>
                            <th>Window</th>
                            <th>End Block</th>
                            <th>Transactions</th>
                            <th>Votes</th>
                            <th>Tickets</th>
                            <th>Revocations</th>
                            <th>Total Size</th>
                            <th>Difficulty</th>
                            <th>Ticket Price (DCR)</th>
                            <th>Age</th>
                            <th>Start Time ({{timezone}})</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{range .Data}}
                        <tr id="{{.StartBlock}}">
                            <td>
                                <span>{{.Window}}</span>
                                {{if lt .BlocksCount $.WindowSize}}<span class="incomplete-window">({{.BlocksCount}}/{{$.WindowSize}}) </span>{{end}}
                            </td>
                            <td>
                                <a class="fs16 height" href="/blocks?height={{add .StartBlock .BlocksCount}}&rows={{$.Limit}}&start_block={{.StartBlock}}">
                                    {{ add .StartBlock .BlocksCount }}
                                </a>
                            </td>
                            <td>{{.Transactions}}</td>
                            <td>{{.Voters}}</td>
                            <td>{{.FreshStake}}</td>
                            <td>{{.Revocations}}</td>
                            <td>{{.FormattedSize}}</td>
                            <td>{{template "decimalParts" (float64AsDecimalParts .Difficulty 0 true)}}</td>
                            <td>{{template "decimalParts" (float64AsDecimalParts (toFloat64Amount .TicketPrice) 2 false)}}</td>
                            <td data-target="main.age" data-age="{{.StartTime}}"></td>
                            <td>{{.FormattedTime}}</td>
                        </tr>
                    {{end}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{{ template "footer" . }}

</body>
</html>
{{ end }}