        <div class="row">
            <div class="col-md-12">
                <h4 id="stake-transactions"><span>Stake Transactions</span></h4>
                <table class="table table-sm">
                    <thead>
                        <th>Transactions ID:</th>
                        <th>Total Value:</th>
                        <th>Size:</th>
                        <th>Type:</th>
                    </thead>
                    <tbody>
                        {{ range .RawSTxWithTypes}}
                        <tr>
                            <td>
                                <span>
                                    <a class="hash" href="/explorer/tx/{{.Txid}}">{{.Txid}}</a>
                                </span>
                            </td>
                            <td>{{ .Vout | getTotal | getAmount}}</td>
                            <td>{{.Hex | size}} B</td>
                            <td>{{.TxType}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <h4 id="transactions"><span>Transactions</span></h4>
                <table class="table table-sm">
                    <thead>
                        <th>Transactions ID:</th>
                        <th>Total Value:</th>
                        <th>Size:</th>
                    </thead>
                    <tbody>
                        {{ range .RawTx}}
                        <tr>
                            <td>
                                <span>
                                    <a class="hash" href="/explorer/tx/{{.Txid}}">{{.Txid}}</a>
                                </span>
                            </td>
                            <td>{{ .Vout | getTotal | getAmount}}</td>
                            <td>{{.Hex | size}} B</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
