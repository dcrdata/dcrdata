{{define "block"}}
<!DOCTYPE html>
<html lang="en">
{{template "html-head" printf "Decred Block %d" .Height}}
<body>

    {{template "navbar"}}

    <div class="container">
        <h4>Block <span class="mono">#{{.Height | int64Comma}}</span> <span style="font-size: 12px;"><a href="/api/block/{{.Height}}/verbose?indent=true">view raw</a></span></span></h4>

        <div class="row">
            <div class="col-md-4">
                <table class="table table-sm flush-left">
                    <tr>
                        <td>Hash</td>
                        <td><span class="hash collapse">{{.Hash}}</span></td>
                    </tr>
                    <tr>
                        <td>Height</td>
                        <td class="mono fs12">{{.Height | int64Comma}}</td>
                    </tr>
                    <tr>
                        <td>Size</td>
                        <td class="mono fs12">{{.Size | formatBytes}}</td>
                    </tr>
                    <tr>
                        <td>Confirmations</td>
                        <td class="mono fs12">{{.Confirmations}}</td>
                    </tr>
                    <tr>
                        <td>Time ({{timezone}})</td>
                        <td class="mono fs12">{{.Time | getTime}}</td>
                    </tr>
                    <tr>
                        <td>Difficulty</td>
                        <td class="mono fs12">{{.Difficulty | float64Commaf}}</td>
                    </tr>
                    <tr>
                        <td>POS Difficulty(Sbits)</td>
                        <td class="mono fs12">{{.SBits}}</td>
                    </tr>
                    <tr>
                        <td>Total Sent in Block</td>
                        <td class="dcr mono fs12">{{$ | totalSentInBlock}}</td>
                    </tr>
                </table>
            </div>

            <div class="col-md-4">
                <table class="table table-sm flush-left">
                    <tr>
                        <td>Previous Block Hash</td>
                        <td><a class="hash collapse" href="/explorer/block/{{.PreviousHash}}">{{.PreviousHash}}</a></td>
                    </tr>
                    {{if .NextHash}}
                    <tr>
                        <td>Next Block Hash</td>
                        <td><span class="hash collapse"><a href="/explorer/block/{{.NextHash}}">{{.NextHash}}</a></td>
                    </tr>
                    {{end}}
                    <tr>
                        <td>Transactions</td>
                        <td><a class="mono fs12" href="#transactions">{{.RawTx | len}}</a></td>
                    </tr>
                    <tr>
                        <td>Votes</td>
                        <td><a class="mono fs12" href="#votes">{{.Voters}}</a></td>
                    </tr>
                    <tr>
                        <td>Tickets</td>
                        <td><a class="mono fs12" href="#tickets">{{.FreshStake}}</a></td>
                    </tr>
                    <tr>
                        <td>Revocations</td>
                        <td><a class="mono fs12" href="#revs">{{.Revocations}}</a></td>
                    </tr>
                    <tr>
                        <td>Merkle Root</td>
                        <td><span class="hash collapse" >{{.MerkleRoot}}</span></td>
                    </tr>
                    <tr>
                        <td>Stake Root</td>
                        <td><span class="hash collapse" >{{.StakeRoot}}</span></td>
                    </tr>
                </table>
            </div>

            <div class="col-md-4">
                <table class="table table-sm flush-left">
                    <tr>
                        <td>Block Verison</td>
                        <td class="mono fs12">{{.Version}}</span>
                    </tr>
                    <tr>
                        <td>Stake Version</td>
                        <td class="mono fs12">{{.StakeVersion}}</td>
                    </tr>
                    <tr>
                        <td>Vote Bits</td>
                        <td class="mono fs12">{{.VoteBits}}</td>
                    </tr>
                    <tr>
                        <td>Final State</td>
                        <td><span class="hash collapse" >{{.FinalState}}</span></td>
                    </tr>
                    <tr>
                        <td>Pool Size</td>
                        <td>{{.PoolSize | uint32Comma}}</td>
                    </tr>
                    <tr>
                        <td>Nonce</td>
                        <td class="mono fs12">{{.Nonce}}</td>
                    </tr>
                    <tr>
                        <td>Bits</td>
                        <td class="mono fs12">{{.Bits}}</td>
                    </tr>
                    <tr>
                        <td>Age</td>
                        <td class="hidden">{{.Time}}</td>
                        <td class="mono fs12 age">{{.Time}}</td>
                    </tr>
                </table>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <h4 id="votes"><span>Votes</span></h4>
                <table class="table table-sm striped">
                    <thead>
                        <th>Transactions ID</th>
                        <th class="text-right">Total DCR</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{ range .Votes}}
                        <tr>
                            <td>
                                <span>
                                    <a class="hash" href="/explorer/tx/{{.Txid}}">{{.Txid}}</a>
                                </span>
                            </td>
                            <td class="dcr mono fs12 text-right">{{.Vout | getTotalFromBlock | float64Commaf}}</td>
                            <td class="mono fs12">{{.Hex | size | formatBytesInt}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h4 id="tickets"><span>Tickets</span></h4>
                <table class="table table-sm striped">
                    <thead>
                        <th>Transactions ID</th>
                        <th class="text-right">Total DCR</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{ range .Tickets}}
                        <tr>
                            <td>
                                <span>
                                    <a class="hash" href="/explorer/tx/{{.Txid}}">{{.Txid}}</a>
                                </span>
                            </td>
                            <td class="text-right dcr mono fs12">{{ .Vout | getTotalFromBlock | float64Commaf}}</td>
                            <td class="mono fs12">{{.Hex | size | formatBytesInt}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>
        {{if .Revocations}}
        <div class="row">
            <div class="col-md-12">
                <h4 id="revs"><span>Revocations</span></h4>
                <table class="table table-sm striped">
                    <thead>
                        <th>Transactions ID</th>
                        <th>Total DCR</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{ range .Revs}}
                        <tr>
                            <td>
                                <span>
                                    <a class="hash" href="/explorer/tx/{{.Txid}}">{{.Txid}}</a>
                                </span>
                            </td>
                            <td class="dcr mono fs12">{{ .Vout | getTotalFromBlock | float64Commaf}}</td>
                            <td class="mono fs12">{{.Hex | size | formatBytesInt}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>
        {{end}}

        <div class="row">
            <div class="col-sm-12">
                <h4 id="transactions"><span>Transactions</span></h4>
                <table class="table table-sm striped">
                    <thead>
                        <th>Transactions ID</th>
                        <th class="text-right">Total DCR</th>
                        <th>Size</th>
                    </thead>
                    <tbody>
                        {{range .RawTx}}
                        <tr>
                            <td>
                                <span>
                                    <a class="hash" href="/explorer/tx/{{.Txid}}">{{.Txid}}</a>
                                </span>
                            </td>
                            <td class="dcr mono fs12 text-right">{{.Vout | getTotalFromBlock | float64Commaf}}</td>
                            <td class="mono fs12">{{.Hex | size | formatBytesInt}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

{{template "footer"}}

</body>
</html>
{{ end }}
