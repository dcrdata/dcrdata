{{define "home"}}
<!DOCTYPE html>
<html lang="en">

{{ template "html-head" "Decred Block Explorer by dcrdata.org"}}

<body class="{{ theme }}">
    {{ template "navbar" . }}
    <div class="container main" data-controller="time blocklist homepage">

        <div class="row">

            <div class="col-md-6">

                <h3 class="mt-2">{{.NetName}} Chain State</h3>

                <div data-controller="networkOverview">
                    {{with .Info}}
                    <div class="bg-white rounded p-3 mb-3">
                        <div class="mb-3">
                            <img 
                                class="pr-1" 
                                style="width: 30px"
                                src="/images/general.svg" 
                                alt="general"
                            />
                            General
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="fs13 lh1rem">Available Supply (of 21 mil)</div>
                                <div class="mono lh1rem fs14-decimal fs24 p03rem0 d-flex align-items-baseline">
                                    <span id="coin-supply">
                                        {{template "decimalParts" (float64AsDecimalParts (toFloat64Amount .CoinSupply) 0 true)}}
                                    </span>
                                    <span class="pl-1 unit lh15rem">DCR</span>
                                </div>
                            </div>

                            {{if .DevFund}}
                            <div class="col-4">
                                <div class="fs13"><a href="/address/{{.DevAddress}}">Project Fund</a></div>
                                <div class="data mono lh1rem fs14-decimal fs24 p03rem0 d-flex align-items-baseline">
                                    <span id="dev-fund">
                                        {{template "decimalParts" (float64AsDecimalParts (toFloat64Amount .DevFund) 0 true)}}
                                    </span>
                                    <span class="pl-1 unit lh15rem">DCR</span>
                                </div>
                            </div>
                            {{end}}

                            <div class="col-4">
                                <div class="fs13">Project Subsidy</div>
                                <div class="mono lh1rem fs14-decimal fs24 p03rem0 d-flex align-items-baseline">
                                    <span id="bsubsidy-dev">
                                        {{template "decimalParts" (float64AsDecimalParts (toFloat64Amount .NBlockSubsidy.Dev) 8 true 2)}}
                                    </span>
                                    <span class="pl-1 unit lh15rem">DCR</span>
                                </div>
                            </div>
  
                        </div>
                    </div>

                    <div class="bg-white rounded p-3 mb-3">
                        <div class="mb-3">
                            <img 
                                class="pr-1"
                                style="width:25px" 
                                src="/images/staking.svg" 
                                alt="staking"
                            />
                            Staking
                        </div>
                        <div class="row pb-3">
                            <div class="col-4">
                                <div class="fs13">
                                    <a class="no-underline" href="/charts#ticket-price">Ticket Price</a>
                                </div>
                                <div class="mono lh1rem fs14-decimal fs24 p03rem0 d-flex align-items-baseline">
                                    <span id="ticket-price">{{template "decimalParts" (float64AsDecimalParts .StakeDiff 8 false 2)}}</span>
                                    <span class="pl-1 unit lh15rem">DCR</span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="fs13">Next Ticket Price Estimate</div>
                                <div class="mono d-flex align-items-baseline lh1rem p03rem0">
                                    ~<span class="fs24 d-flex">{{template "decimalParts" (float64AsDecimalParts .NextExpectedStakeDiff 2 false)}}</span>
                                    <span class="pl-1 unit lh15rem">DCR</span>
                                </div>
                                <div class="d-flex lh1rem fs12 text-black-50">
                                    <span>min:&nbsp;</span>
                                    <span class="d-flex"> {{template "decimalParts" (float64AsDecimalParts .NextExpectedBoundsMin 2 false)}}</span>
                                    <span>&nbsp;&mdash;&nbsp;max:&nbsp;</span>
                                    <span class="d-flex"> {{template "decimalParts" (float64AsDecimalParts .NextExpectedBoundsMax 2 false)}}</span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="fs13">PoS Reward</div>
                                <div class="mono lh1rem fs14-decimal fs24 p03rem0 d-flex align-items-baseline">
                                    <span id="bsubsidy-pos">
                                        {{template "decimalParts" (float64AsDecimalParts (toFloat64Amount (divide .NBlockSubsidy.PoS 5)) 8 true 2)}}
                                    </span>
                                    <span class="pl-1 unit lh15rem" style="font-size:13px;">DCR/vote</span>
                                </div>
                                <div class="fs12 lh1rem">
                                    <span id="ticket-reward" class="text-black-50">{{template "fmtPercentage" .TicketReward}} per ~{{.RewardPeriod}}</span>
                                </div>
                            </div>
                        </div>

                        <div class="row pb-3">
                            <div class="col-4">
                                <div class="fs13">Total Locked DCR</div>
                                <div class=" mono lh1rem fs14-decimal fs24 p03rem0 d-flex align-items-baseline">
                                    <span id="pool-value">
                                        {{template "decimalParts" (float64AsDecimalParts .PoolInfo.Value 0 true)}}
                                    </span>
                                    <span class="pl-1 unit lh15rem">DCR</span>
                                </div>
                                <div class="fs14 lh1rem">
                                    <span class="text-black-50" id="pool-info-percentage">{{printf "%.2f" .PoolInfo.Percentage}} % of total supply</span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="fs13">Tickets in Mempool</div>
                                <div class="lh1rem p03rem0">
                                    <span data-target="homepage.numTicket" class="mono fs24">{{$.Mempool.NumTickets}}</span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="fs13">Votes in Mempool</div>
                                <div class="lh1rem p03rem0">
                                    <span data-target="homepage.numVote" class="mono p03rem0 fs24">{{$.Mempool.NumVotes}}</span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="fs13">Ticket Window Progress</div>
                                <div class="progress">
                                    <div
                                        class="progress-bar rounded"
                                        data-target="homepage.posBar"
                                        role="progressbar"
                                        style="width: {{ticketWindowProgress .IdxBlockInWindow}}%;"
                                        aria-valuenow="{{.IdxBlockInWindow}}"
                                        aria-valuemin="0"
                                        aria-valuemax="{{.Params.WindowSize}}"
                                    >
                                    <span class="nowrap pl-1">block <span data-target="homepage.windowIndex" >{{.IdxBlockInWindow}}</span> of {{.Params.WindowSize}} ({{remaining .IdxBlockInWindow .Params.WindowSize .Params.BlockTime}})</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="bg-white rounded p-3 mb-3">
                        <div class="mb-2">
                            <img 
                                class="pr-1"
                                style="width:25px" 
                                src="/images/mining.svg" 
                                alt="mining"
                            />
                            <span>Mining</span>
                        </div>
                        <div class="row pb-3">
                            <div class="col-4">
                                <div class="fs13">
                                    <a class="no-underline" href="/charts#pow-difficulty">Difficulty</a>
                                </div>
                                <div class="data mono lh1rem p03rem0 fs14-decimal fs24 p03rem0 d-flex align-items-baseline">
                                    <span id="diff">{{template "decimalParts" (float64AsDecimalParts (divideFloat .Difficulty 1000000.0) 0 true)}}</span>
                                    <span class="pl-1 unit lh15rem">Mil</span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="fs13">Hashrate</div>
                                <div class="data mono lh1rem p03rem0 fs14-decimal fs24 p03rem0 d-flex align-items-baseline">
                                    <span id="hashrate">{{template "decimalParts" (float64AsDecimalParts .HashRate 8 true 2)}}</span>
                                    <span class="pl-1 unit lh15rem">Ph/s</span>
                                </div>
                                <div class="fs12 text-black-50">
                                    <span id="hashrate-subdata" class="text-black-50">{{template "fmtPercentage" .HashRateChange}} in past 24h</span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="fs13">PoW Reward</div>
                                <div class="data mono lh1rem p03rem0 fs14-decimal fs24 p03rem0 d-flex align-items-baseline">
                                    <span id="bsubsidy-pow">{{template "decimalParts" (float64AsDecimalParts (toFloat64Amount .NBlockSubsidy.PoW) 8 true 2)}}</span>
                                    <span class="pl-1 unit lh15rem">DCR</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="fs13">Block Reward Adjustment Progress</div>
                                <div class="progress">
                                    <div
                                        class="progress-bar rounded"
                                        data-target="homepage.powBar"
                                        role="progressbar"
                                        style="width: {{rewardAdjustmentProgress .IdxInRewardWindow}}%;"
                                        aria-valuenow="{{.IdxInRewardWindow}}"
                                        aria-valuemin="0"
                                        aria-valuemax="{{.Params.RewardWindowSize}}"
                                    >
                                    <span id="powreward" class="nowrap pl-1">block <span data-target="homepage.rewardIdx" >{{.IdxInRewardWindow}}</span> of {{.Params.RewardWindowSize}} ({{remaining .IdxInRewardWindow .Params.RewardWindowSize .Params.BlockTime}})</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{end}}
                </div>
            </div>

            <div class="col-md-6 nh-col-md-6">

                <div class="d-flex align-items-center mt-2">
                    <h4>Latest Transactions <a href="/mempool" class="p-1 keyboard-target fs14" data-keynav-priority>see more ...</a></h4>
                </div>

                <div class="mb-3 flex-table">
                    <div class="d-flex justify-content-end header">
                        <span class="lh1rem mr-auto">Hash</span>
                        <span style="flex: 0 0 65px" class="lh1rem text-right ml-1">Type</span>
                        <span style="flex: 0 0 105px" class="lh1rem text-right ml-1">Total Sent</span>
                        <span style="flex: 0 0 50px" class="lh1rem text-right ml-1">Size</span>
                        <span style="flex: 0 0 62px" class="lh1rem text-right ml-1 jsonly">Age</span>
                    </div>
                    <div data-target="homepage.transactions" class="transactions md-height-rows rows">
                    {{range .Mempool.LatestTransactions}}
                        <div class="d-flex flex-table-row mempool-row">
                            <a class="hash truncate-hash keyboard-target" style="flex: 1 1 auto" href="/tx/{{.Hash}}" title="{{.Hash}}">{{.Hash}}</a>
                            <span style="flex: 0 0 65px" class="mono text-right ml-1">{{.Type}}</span>
                            <span style="flex: 0 0 105px" class="mono text-right ml-1 fs13">
                              {{template "decimalParts" (float64AsDecimalParts .TotalOut 8 false)}}
                            </span>
                            <span style="flex: 0 0 50px" class="mono text-right ml-1">{{.Size}} B</span>
                            <span style="flex: 0 0 62px" class="mono text-right ml-1 jsonly" data-target="time.age" data-age="{{.Time}}"></span>
                        </div>
                    {{end}}
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <h4>Latest Blocks <a href="/blocks" class="p-1 keyboard-target fs14">see more ...</a></h4>
                </div>

                <table class="table striped table-responsive-sm full-width">
                    <thead>
                        <tr>
                            <th>Height</th>
                            <th>
                                <span class="d-none d-lg-inline">Transactions</span>
                                <span class="d-lg-none">Txn</span>
                            </th>
                            <th>Vote<span class="d-none d-lg-inline">s</span></th>
                            <th>Ticket<span class="d-none d-lg-inline">s</span></th>
                            <th>
                                <span class="d-none d-lg-inline">Revokes</span>
                                <span class="d-lg-none">Revoke</span>
                            </th>
                            <th>Size</th>
                            <th class="jsonly">Age</th>
                            <th>Time ({{timezone}})</th>
                        </tr>
                    </thead>
                    <tbody data-target="blocklist.table">
                        {{range .Blocks}}
                        <tr data-height="{{.Height}}" data-link-class="fs18">
                            <td data-type="height"><a href="/block/{{.Height}}" class="fs18">{{.Height}}</a></td>
                            <td data-type="tx">{{.Transactions}}</td>
                            <td data-type="votes">{{.Voters}}</td>
                            <td data-type="tickets">{{.FreshStake}}</td>
                            <td data-type="revocations">{{.Revocations}}</td>
                            <td data-type="size">{{.FormattedBytes}}</td>
                            <td data-type="age" class="jsonly" data-target="time.age" data-age="{{.BlockTime}}"></td>
                            <td data-type="time">{{.BlockTime}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>

            </div>

        </div>

    </div>

    <!-- end wrapper -->

    {{  template "footer" . }}

</body>
</html>
{{end}}
