                        </tr>
			<tr>
                            <td>Size</td>
                            <td><strong><span id="poolsize">{{.BlockSummary.PoolInfo.Size}} tickets</span></strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <!-- end wrapper -->

    {{ template "footer"}}

</body>

</html>
{{end}}
